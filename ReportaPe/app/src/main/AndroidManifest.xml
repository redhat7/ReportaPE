<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.capsula.reportape"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
a

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".presentation.activity.Splashscreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.activity.LandingActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".presentation.activity.LoginActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".presentation.activity.ReportarActivity"
            android:label="Realiza tu reporte"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".presentation.activity.VerReportesActivity"
            android:label="Revisar mis reportes"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".presentation.activity.NosotrosActivity"
            android:label="@string/title_activity_nosotros"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".presentation.activity.CondicionesActivity"
            android:label="@string/title_activity_condiciones"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>